<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation = "vertical"
            android:layout_margin="7dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/heart_attack"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is Heart Attack ?"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="13dp"
                    android:paddingBottom="5dp"
                    />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="10dp"
                    android:text="A heart attack occurs when the flow of blood to the heart is blocked. The blockage is most often a buildup of fat, cholesterol and other substances, which form a plaque in the arteries that feed the heart (coronary arteries).\n"
                    android:textSize="18dp"
                    />


                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sometimes, a plaque can rupture and form a clot that blocks blood flow. The interrupted blood flow can damage or destroy part of the heart muscle\n."
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="10dp"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="450dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/image_heart" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Symptoms of heart attack"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="13dp"
                    android:paddingBottom="5dp"
                    />


                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Common Symptoms include\n1.Pressure,tightness,pain,or a squeezing or aching sensation in your chest or arms that may spread to your neck, jaw or back\n2.Nausea,indigestion,heartburn or abdominal pain\n3.Shortness of breath\n4.Cold sweat\n5.Fatigue and light head sensation\n"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="10dp"
                    />


                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dos and don'ts in the event of a heart attack:"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="13dp"
                android:paddingBottom="5dp"
                />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\nDos\n\n1.Call 995 for an ambulance. Paramedics are trained to stabilise the patient’s condition with medication, and the ambulance is equipped with a defibrillator to resuscitate the patient should the heart stop en route.\n\n2.Give clear instructions to the paramedics on finding the patient’s home, have someone wait at a visible location to guide the paramedics and hold the lift open if the patient lives in a high-rise building, so as to save time.\n\n3.Get ready the patient’s personal effects such as personal identification, medical benefit identification, insurance and other documents for admission. Have the patient seated in a location where he can be transferred easily to a stretcher.\n\n4.Give a clear account of what happened. \n\n4.Let the paramedics know about any drug allergies or past medical history.\n"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="13dp"
                    android:paddingBottom="5dp"
                    android:textSize="18dp"
                    />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don’ts\n\n1.Drive or take public transport to the hospital, even if the patient lives nearby. As the patient’s condition may deteriorate en route, it is safer to wait for an ambulance. Also, ambulances also get priority while it driving on the road or in traffic.\n\n\n2.Ignore the pain. Get anxious about time wasted when the paramedics perform an on-site ECG.\n\n\n"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="13dp"
                    android:paddingBottom="5dp"
                    android:textSize="18dp"
                    />






            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>