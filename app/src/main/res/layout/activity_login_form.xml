<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginForm"
    android:orientation="vertical"
    android:background="@drawable/download3"
  >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/user_photo"
        />




        <EditText
            android:id="@+id/first_name_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#FFF"
            android:padding="15dp"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/transparent"
            android:textColor="#FFF"
            android:inputType="textEmailAddress"
            android:drawableRight="@drawable/ic_perm_identity_black_24dp"
            />





    <EditText
        android:layout_width="match_parent"
        android:id="@+id/password_Login"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="#FFF"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:background="@drawable/transparent"
        android:inputType="textPassword"
        android:textColor="#FFF"

        android:drawableRight="@drawable/ic_vpn_key_black_24dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft = "15dp"
        android:text="Log in"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor = "#FFF"
        android:background="@drawable/rounded_corners"
        android:id="@+id/Login"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="20sp"
        android:textColor = "#FFF"
        android:layout_margin="10dp"
        android:id="@+id/Register"
        android:background="@drawable/rounded_corners"
        />
</LinearLayout>
</LinearLayout>